{
  "expo": {
    "name": "ProductApp",
    "slug": "product-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f4f1de"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f4f1de"
      },
      "package": "com.yourusername.productapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
